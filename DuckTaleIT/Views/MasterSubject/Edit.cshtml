@model DuckTaleIT.Models.MasterSubject

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Subject</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="mSubjectId" />
            <div class="form-group">
                <label asp-for="mSubjectName" class="control-label"></label>
                <input asp-for="mSubjectName" class="form-control" />
                <span asp-validation-for="mSubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mSubjectCode" class="control-label"></label>
                <input asp-for="mSubjectCode" class="form-control" />
                <span asp-validation-for="mSubjectCode" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none;">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

